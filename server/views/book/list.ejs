<%- include ../Partials/header.ejs%>

    <%- include ../Partials/main_nav.ejs%>
        <% if(typeof displayName=='string' && displayName) { %>
            <a href="/book-list/add" class="btn btn-primary" role="button" id="addBook"><i
                    class="fas fa fa-plus-circle"></i> Add a Book</a>
            <% } %>
                <main class="container-fluid">
                    <div class="row" style="position: relative; left: 100px;">

                        <div class="jumbotron bg-light p-5 rounded-lg m-3 container-fluid">
                            <h1>
                                <%= title %>
                            </h1>
                            <br>
                            <br>
                            <table class="table table-bordered table-striped table-hover booksTable col-md-13">
                                <!-- Header Row-->
                                <tr>
                                    <th class="text-center" scope="col-1">Name</th>
                                    <th class="text-center" scope="col-1">Author</th>
                                    <th class="text-center" scope="col-1">Published</th>
                                    <th class="text-center" scope="col-4">Description</th>
                                    <th class="text-center" scope="col-1">Price</th>
                                    <% if(typeof displayName=='string' && displayName) { %>
                                        <th class="text-center" scope="col-2"></th>
                                        <th class="text-center" scope="col-2"></th>
                                        <% } %>
                                </tr>

                                <!-- Repeatable Template Row-->
                                <% for(let count=0; count < BookList.length; count++) { %>
                                    <tr>
                                        <td class="class text-center col-1">
                                            <%= BookList[count].name %>
                                        </td>
                                        <td class="class text-center col-1">
                                            <%= BookList[count].author %>
                                        </td>
                                        <td class="class text-center col-1">
                                            <%= BookList[count].published %>
                                        </td>
                                        <td class="col-6">
                                            <%= BookList[count].description %>
                                        </td>
                                        <td class="class text-center col-1">
                                            <%= BookList[count].price %>
                                        </td>

                                        <% if(typeof displayName=='string' && displayName) { %>
                                            <td class="text-center col-2">
                                                <a href="/book-list/edit/<%= BookList[count].id %>"
                                                    class="btn btn-primary btn-sm"><i class="fas fa-pencil-alt"></i>
                                                    Edit</a>
                                            </td>
                                            <td class="text-center col-2">
                                                <a href="/book-list/delete/<%= BookList[count].id %>"
                                                    class="btn btn-danger btn-sm" id="danger"><i
                                                        class="fas fa-trash-alt"> Delete</i></a>
                                            </td>
                                            <% } %>
                                    </tr>

                                    <% } %>
                            </table>
                        </div>
                    </div>
                    </div>
                </main>

                <%- include ../Partials/bottom_nav.ejs%>

                    <%- include ../Partials/footer.ejs%>