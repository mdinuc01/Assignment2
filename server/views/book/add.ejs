<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>

<!-- Content for the Add Page-->
<div class="jumbotron bg-light p-5 rounded-lg m-3 container-fluid" style="position: relative; left: 100px;">
    <div class="row">
        <div class="offset-md-3 col=md-6"></div>
        <h1><%= title %></h1>
    <form class="form"  method="POST">
        <div class="form-group">
            <label for="nameTextField">Book Title</label>
            <input type="text" class="form-control"
            id="nameTextField" placeholder="Enter the Book Title" 
            name="name" required>

            <div class="form-group">
                <label for="authorTextField">Author</label>
                <input type="text" class="form-control"
                id="authorTextField" placeholder="Enter the Book's Author" 
                name="author" required>
            </div>

            <div class="form-group">
                <label for="publishedTextField">Year</label>
                <input type="text" class="form-control"
                id="publishedTextField" placeholder="Enter the Book's Year of Publication" 
                name="published" required>
            </div>

            <div class="form-group">
                <label for="descriptionTextArea">Description</label>
                <textarea type="text" class="form-control"
                id="descriptionTextArea" placeholder="Enter the Book's Description" 
                name="description" required></textarea>
            </div>
            <br>

            <div class="form-group">
                <label for="priceTextField">Price</label>
                <input type="text" class="form-control"
                id="priceTextField" placeholder="Enter the Book's Price" 
                name="price" required>
            </div>
            
        </div>

        <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i>Submit</button>
        <a href="/book-list" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
    </form>
    </div>
</div>

<%- include ../Partials/bottom_nav.ejs%>  

